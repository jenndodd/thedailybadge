<% unless @message.nil? %>
  <div id="errors">
    <h3>Errors!</h3>
    <ul>
      <li><em><%= @message %></em></li>
    </ul>
  </div>
<% end %>

<h1>Welcome back!</h1>

<%= form_tag "/session", { :class => "login-form"} do %>
  <div class="label-input">
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </div>
  <div class="label-input">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  
  <%= submit_tag "Log in!" %>
<% end %>